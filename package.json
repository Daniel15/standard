{
  "name": "@daniel15/standard-root",
  "version": "1.0.0",
  "description": "My standard configurations for ESLint, Prettier, etc.",
  "license": "MIT",
  "author": "Daniel Lo Nigro <npm@d.sb>",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "3.8.1",
